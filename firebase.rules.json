{
    "rules": {
        "dev3": {
            "$hospitalId": {
                "requests": {
                    "$request_id": {
                        ".write": "auth.uid !== null",
                        ".read": "auth.uid !== null",
                        ".validate": "newData.hasChildren(['Request', 'DeviceId', 'Token', 'UserID'])&& newData.child('UserID').val() === auth.uid"
                    }
                },
                "api": {
                    "$request_id": {
                        ".write": "auth.uid !== null",
                        ".read": "auth.uid !== null",
                        ".validate": "newData.hasChildren(['Request', 'DeviceId', 'Token', 'UserID']) && newData.child('UserID').val() === auth.uid"
                    }
                },
                "passwordResetRequests": {
                    "$request_id": {
                        ".write": "true",
                        ".read": "true"
                    }
                },
                "passwordResetResponses": {
                    "$request_id": {
                        ".write": "true",
                        ".read": "true"
                    }
                },
                "users": {
                    "$user_id": {
                        "$request_id": {
                            ".write": "auth.uid !== null && auth.uid === $user_id",
                            ".read": "auth.uid !== null && auth.uid === $user_id"
                        }
                    }
                },
                "logged_in_users": {
                    "$user_id": {
                        ".write": "auth.uid !== null && auth.uid === $user_id",
                        ".read": "auth.uid !== null && auth.uid === $user_id"
                    }
                }
            }
        }
    }
}