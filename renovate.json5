{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':pinAllExceptPeerDependencies',
    ':separateMultipleMajorReleases',
    ':maintainLockFilesWeekly',
    'security:minimumReleaseAgeNpm',
    ':configMigration',
    'helpers:pinGitHubActionDigestsToSemver',
    ':timezone(America/Toronto)',
    'schedule:weekly',
    'github>mschoettle/renovate-presets//presets/docker-alpine.json5',
    'github>mschoettle/renovate-presets//presets/actions-dependency-version.json5',
    'github>mschoettle/renovate-presets//presets/pre-commit-hooks.json5',
  ],
  ignorePresets: [
    'workarounds:nodeDockerVersioning',
  ],
  assignees: [
    'staceybeard',
  ],
  labels: [
    'dependencies',
  ],
  packageRules: [
    {
      groupName: 'auxiliary angular packages',
      matchDepNames: [
        '/^angular/',
      ],
    },
    {
      groupName: 'angular-translate packages',
      matchPackageNames: [
        '/^angular-translate/',
      ],
    },
    {
      matchPackageNames: [
        'firebase-tools',
      ],
      schedule: [
        '* * 1 * *',
      ],
    },
    {
      groupName: 'plotly packages',
      matchPackageNames: [
        '/plotly/',
      ],
    },
    {
      groupName: '@zxcvbn-ts packages',
      matchPackageNames: [
        '/^@zxcvbn-ts//',
      ],
    },
    {
      groupName: 'webpack packages',
      matchPackageNames: [
        '/webpack/',
      ],
    },
    {
      groupName: 'webpack loader packages',
      matchPackageNames: [
        '/-loader$/',
      ],
    },
  ],
}
